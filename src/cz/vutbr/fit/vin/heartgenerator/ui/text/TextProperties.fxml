<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vutbr.fit.vin.heartgenerator.ui.text.TextPropertiesController">
   <children>
      <GridPane id="propertiesGridPane" hgap="7.0" stylesheets="@../HearGeneratorStyle.css">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Text" />
            <TextField fx:id="text" promptText="Displayed text" text="I love this app" GridPane.columnIndex="1" />

            <Label text="Color" GridPane.rowIndex="1" />
            <ColorPicker fx:id="color" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Strikethrough" GridPane.rowIndex="2" />
            <CheckBox fx:id="strikethrough" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
 
            <Label text="Underline" GridPane.rowIndex="3" />
            <CheckBox fx:id="underline" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Size X" GridPane.rowIndex="4" />
            <Spinner fx:id="sizeX" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Size Y" GridPane.rowIndex="5" />
            <Spinner fx:id="sizeY" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Position X" GridPane.rowIndex="6" />
            <Spinner fx:id="positionX" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label text="Position Y" GridPane.rowIndex="7" />
            <Spinner fx:id="positionY" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         </children>
      </GridPane>
   </children>
</VBox>
